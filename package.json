{
  "name": "wiki-bot",
  "version": "1.0.0",
  "description": "wiki-bot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "lint:test": "eslint './**/*.ts' './send-email/**/*.mjs'  --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "build": "rm -rf dist && tsc --project tsconfig.build.json && node scripts/add-js-extensions.mjs",
    "update-env": "tsx --env-file=.env ./build/update-env.ts",
    "docker-build": "sh ./build/wiki-bot-playwright/build.sh",
    "docker-run": "sh ./build/wiki-bot-playwright/run.sh",
    "docker-test": "curl \"http://localhost:9000/2015-03-31/functions/function/invocations\" -d '{}'",
    "validate-cf": "tsx ./build/validate-cloudformation.ts",
    "test:ci": "npm run type-check && npm test && npm run lint:test && npm run validate-cf",
    "rollback": "tsx --env-file=.env bot/scripts/rollback.ts",
    "experiments": "tsx --env-file=.env bot/experiments/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EladHeller/wiki-bot.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EladHeller/wiki-bot/issues"
  },
  "homepage": "https://github.com/EladHeller/wiki-bot#readme",
  "dependencies": {
    "@hebcal/core": "^5.10.1",
    "axios": "^1.12.2",
    "axios-cookiejar-support": "^6.0.4",
    "find-hebrew-names": "^0.0.2",
    "jsdom": "^26.1.0",
    "openai": "^6.0.1",
    "playwright": "^1.57.0",
    "tough-cookie": "^6.0.0"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "^3.879.0",
    "@aws-sdk/client-lambda": "^3.922.0",
    "@aws-sdk/client-s3": "^3.858.0",
    "@aws-sdk/client-ses": "^3.899.0",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.28.5",
    "@jest/globals": "^30.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.9.2",
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "zx": "^8.8.5"
  }
}
